<!DOCTYPE html>
<html>
  <head>
    <title>TheFarmerMarket</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://blackrockdigital.github.io/startbootstrap-stylish-portfolio/css/stylish-portfolio.css" rel="stylesheet">
 </head>

  <body>
  <body cz-shortcut-listen="true">
 <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
                    Menu <i class="fa fa-bars"></i>
                      </button>
                       <a class="navbar-brand page-scroll" href="#page-top">
                    <i class="fa fa-play-circle"></i> <span class="light" style="color:black">The Farmer Market</span> 
                </a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
                <ul class="nav navbar-nav">
                  <li class="" >
                    <%if user_signed_in?%>
                      <a <%= link_to "Logout", destroy_user_session_path, :style =>"color:black", method: :delete, :class => "page-scroll"%></a>  
                            <%else%>
                          </li>
                        <li class="">
                      <a <%= link_to "Login", user_session_path, :style =>"color:black", :class => "page-scroll"%> </a>  
                    </li>
                  <%end%>
                <li class="">                              
              <a <%= link_to "Home", welcome_index_path, :style =>"color:black", :class => "page-scroll"%></a>  
            </li>
            <li class="">                              
              <a <%= link_to "Add", new_farmer_path, :style =>"color:black", :class => "page-scroll"%></a>  
            </li>
          </ul>
            </div>
              <div class="row">
                 <div class="col-xs-10 col-xs-offset-1">
                      <% flash.each do |alert_type, msg| %>
                          <% if alert_type == "notice" %>
                             <div class="alert alert-success">
                                <% elsif alert_type == "alert" %>
                                  <div class="alert alert-danger">
                                    <% else %>
                               <div class="alert-dismissible<%= "#{alert_type}"%>" >
                              <% end %>
                           <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <ul>
                      <li>
                   <%= msg %>
                 </li>
              </ul>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
     <!-- /.container -->
    </nav>
    <!-- Header -->
    <header id="top" class="header">
        <div class="text-vertical-center">
            <h1>The Farmer Market</h1>
            <br>
        </div>
    </header>
<%= yield %>
    <!-- Footer -->


    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-lg-offset-1 text-center">
                    <hr class="small">
                    <p class="text-muted">Copyright Â© Rafeeq Wilson 2016</p>
                </div>
            </div>
        </div>
       
    </footer>

    
  </body>
</html>
